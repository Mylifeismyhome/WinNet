
export ROOT_DIR=${PWD}/extern/OpenSSL/src

configure:
	${ROOT_DIR}/openssl-master/config -fPIC shared --prefix=/usr --openssldir=/etc/ssl

build:
	${MAKE}

install:
	${MAKE} install INSTALL_PREFIX=${ROOT_DIR}/bin/
	mkdir ../bin/
	cp *.a ../bin/
	cp *.map ../bin/
	cp *.pc ../bin/
	cp *.so ../bin/
	cp *.so.* ../bin/
