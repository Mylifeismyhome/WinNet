
export ROOT_DIR=${PWD}/extern/OpenSSL/src

configure:
	${ROOT_DIR}/openssl-master/config -fPIC shared --prefix=${ROOT_DIR}/../bin/bin/ --openssldir=${ROOT_DIR}/../bin/openssl/

build:
	${MAKE}

install:
	${MAKE} install INSTALL_PREFIX=${ROOT_DIR}/bin/
	mkdir ../bin/
	mkdir ../bin/include/
	cp -R openssl-master/include ../bin/
	cp *.a ../bin/
	cp *.map ../bin/
	cp *.pc ../bin/
	cp *.so ../bin/
	cp *.so.* ../bin/
