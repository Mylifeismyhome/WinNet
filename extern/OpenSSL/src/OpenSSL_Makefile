
export ROOT_DIR=${PWD}/extern/OpenSSL/src

download:
	wget -O ${ROOT_DIR}/openssl-master.zip "https://github.com/openssl/openssl/archive/refs/heads/master.zip" 

extract:
	unzip -o ${ROOT_DIR}/openssl-master.zip -d ${ROOT_DIR}/

configure:
	${ROOT_DIR}/openssl-master/config -fPIC shared --prefix=${ROOT_DIR}/../bin/bin/ --openssldir=${ROOT_DIR}/../bin/openssl/

build:
	${MAKE}

install:
	${MAKE} install INSTALL_PREFIX=${ROOT_DIR}/bin/
